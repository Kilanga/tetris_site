<% content_for :title, "Contactez Tetris Aménagement - Est-Lyonnais & Lyon" %>
<% content_for :meta_description, "Besoin d’un aménagement sur mesure pour votre véhicule utilitaire ? Contactez Tetris Aménagement à Vaulx-en-Velin, dans l’Est-Lyonnais près de Lyon. Nous répondons rapidement à toutes vos demandes." %>
<h1 class="visually-hidden">Tetris Aménagement de Véhicules à Lyon</h1>

<div class="banner">
  <%= image_tag "https://res.cloudinary.com/dqpfnffmi/image/upload/v1744272731/logo-repris-homepage-prop1_topz91.svg", alt: "Bannière Logo", class: "bg-white banner-fullwidth-image" %>
</div>


<div class="contact-form">
  <h2>Contactez-nous</h2>
  <%= form_with model: @contact, url: contact_path, local: true do |f| %>
    <div class="form-group">
      <%= f.label :nom, "Nom" %>
      <%= f.text_field :nom, class: "form-control", required: true %>
    </div>
    
    <div class="form-group">
      <%= f.label :prenom, "Prénom" %>
      <%= f.text_field :prenom, class: "form-control" %>
    </div>
    
    <div class="form-group">
      <%= f.label :societe, "Société" %>
      <%= f.text_field :societe, class: "form-control" %>
    </div>
    
    <div class="form-group">
      <%= f.label :email, "Adresse Email" %>
      <%= f.email_field :email, class: "form-control", required: true %>
    </div>
    
    <div class="form-group form-check">
      <%= f.check_box :contact_telephone_checkbox, id: "contact_telephone_checkbox", class: "form-check-input" %>
      <%= f.label :contact_telephone_checkbox, "Je souhaite être contacté par téléphone", class: "form-check-label" %>
    </div>

    <div class="form-group" id="telephone_field" style="display: none;">
      <%= f.label :contact_telephone, "Numéro de téléphone" %>
      <%= f.text_field :contact_telephone, class: "form-control", placeholder: "Entrez votre numéro" %>
    </div>
    
    <div class="form-group">
      <%= f.label :message, "Message" %>
      <%= f.text_area :message, class: "form-control", rows: 4, required: true %>
    </div>
    
    <%= f.submit "Envoyer", class: "btn btn-submit" %>
  <% end %>
</div>
<div class="cta-box mt-5 shadow-sm p-4 rounded-3">
  <p class="mb-0">
    <i class="bi bi-info-circle me-2 text-accent"></i>
    Avant de nous écrire, vous pouvez consulter nos 
    <%= link_to "aménagements en bois", amenagement_bois_path, class: "cta-link fw-semibold" %>, 
    <%= link_to "solutions métalliques", amenagement_metal_index_path, class: "cta-link fw-semibold" %> ou 
    <%= link_to "galeries et équipements extérieurs", equipements_ext_index_path, class: "cta-link fw-semibold" %>.
  </p>
</div>
