<div class="banner">
  <%= image_tag "https://res.cloudinary.com/dqpfnffmi/image/upload/v1730716607/logo-complet-original_ohx2ci.svg", alt: "Bannière Logo", class: "bg-white banner-fullwidth-image" %>
</div>
<div class="contact-form">
  <h2>Contactez-nous</h2>
  <%= form_with model: @contact, url: contact_path, local: true do |f| %>
    <div class="form-group">
      <%= f.label :nom, "Nom" %>
      <%= f.text_field :nom, class: "form-control", required: true %>
    </div>
    
    <div class="form-group">
      <%= f.label :prenom, "Prénom" %>
      <%= f.text_field :prenom, class: "form-control" %>
    </div>
    
    <div class="form-group">
      <%= f.label :societe, "Société" %>
      <%= f.text_field :societe, class: "form-control" %>
    </div>
    
    <div class="form-group">
      <%= f.label :email, "Adresse Email" %>
      <%= f.email_field :email, class: "form-control", required: true %>
    </div>
    
    <div class="form-group form-check">
      <%= f.check_box :contact_telephone_checkbox, id: "contact_telephone_checkbox", class: "form-check-input" %>
      <%= f.label :contact_telephone_checkbox, "Je souhaite être contacté par téléphone", class: "form-check-label" %>
    </div>

    <div class="form-group" id="telephone_field" style="display: none;">
      <%= f.label :contact_telephone, "Numéro de téléphone" %>
      <%= f.text_field :contact_telephone, class: "form-control", placeholder: "Entrez votre numéro" %>
    </div>
    
    <div class="form-group">
      <%= f.label :message, "Message" %>
      <%= f.text_area :message, class: "form-control", rows: 4, required: true %>
    </div>
    
    <%= f.submit "Envoyer", class: "btn btn-submit" %>
  <% end %>
</div>
